<div class="mx-auto w-full sm:w-fit sm:min-w-2/3">
  <div
    class="flex-1 flex-col justify-between overflow-y-auto px-4 py-6 sm:px-6"
  >
    <div class="flex items-start justify-between">
      <h2 class="text-2xl text-gray-900 font-bold" id="slide-over-title">
        Shopping cart
      </h2>
    </div>
    <%- include ('../components/cart_items') %>
  </div>

  <% if (!locals.empty) { %>
  <div class="border-t border-gray-200 px-4 py-6 sm:px-6">
    <div class="flex justify-between text-base font-medium text-gray-900">
      <p>Subtotal</p>
      <p id="cart-total-price">$<%= locals.total_price %></p>
    </div>
    <p class="mt-0.5 text-sm text-gray-500">Free Shipping</p>
    <div class="mt-6">
      <button
        id="checkout-button"
        class="bg-blue-600 hover:bg-blue-500 rounded-md px-10 py-3 text-gray-100 font-semibold"
      >
        Checkout
      </button>
    </div>
  </div>
  <% } %>
</div>
