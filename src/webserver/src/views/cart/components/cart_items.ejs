<div>
  <% if (locals.empty) { %>
  <div class="my-10 flex flex-col place-items-center gap-4">
    <div>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="0.5"
        stroke="currentColor"
        class="w-24 h-24 text-gray-900"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M2.25 3h1.386c.51 0 .955.343 1.087.835l.383 1.437M7.5 14.25a3 3 0 00-3 3h15.75m-12.75-3h11.218c1.121-2.3 2.1-4.684 2.924-7.138a60.114 60.114 0 00-16.536-1.84M7.5 14.25L5.106 5.272M6 20.25a.75.75 0 11-1.5 0 .75.75 0 011.5 0zm12.75 0a.75.75 0 11-1.5 0 .75.75 0 011.5 0z"
        />
      </svg>
    </div>
    <div>
      <h2 class="text-lg text-gray-900 font-medium">Your cart is empty</h2>
    </div>
  </div>
  <% } %>

  <div class="flow-root">
    <ul role="list" class="divide-y divide-gray-200">
      <% locals.items.map((item) => { %>
      <li id="cart-product-card-<%- item.id %>" class="flex py-6">
        <div
          class="h-24 w-24 flex-shrink-0 overflow-hidden rounded-md border border-gray-200"
        >
          <img
            src="<%- item.image_url %>"
            alt="<%- item.title %>"
            class="h-full w-full object-cover object-center"
          />
        </div>

        <div class="ml-4 flex flex-1 flex-col">
          <div>
            <div
              class="flex justify-between text-base font-medium text-gray-900"
            >
              <h3><%= item.title %></h3>
              <p class="ml-4">$<%= item.price %></p>
            </div>
            <p class="mt-1 text-sm text-gray-500"><%= item.description %></p>
          </div>
          <div class="flex flex-1 items-center justify-between text-sm">
            <div class="flex items-center gap-x-2">
              <label for="item-quantity-<%- item.id %>" class="text-sm"
                >Qty</label
              >
              <!-- TODO: Add custom styling to this (tailwind won't build classes for some reason) -->
              <input
                id="item-quantity-<%- item.id %>"
                name="quantity"
                value="<%- item.quantity %>"
              />
            </div>

            <div class="flex">
              <button
                id="remove-from-cart-<%- item.id %>"
                type="button"
                class="font-medium text-blue-600 hover:text-blue-500"
              >
                Remove
              </button>
            </div>
          </div>
        </div>
      </li>
      <% }) %>
    </ul>
  </div>
</div>
