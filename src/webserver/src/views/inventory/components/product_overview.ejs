<div class="w-full p-2">
  <div class="overflow-hidden rounded-lg mb-4">
    <img
      src="<%- locals.image_url %>"
      alt="<%- locals.title %>"
      class="w-full object-contain"
    />
  </div>
  <div class="w-full flex flex-col gap-y-4">
    <h2 class="text-2xl font-bold text-gray-900"><%= locals.title %></h2>
    <p class="text-sm text-gray-600"><%= locals.description %></p>
    <button
      id="add-to-cart-<%- locals.id %>"
      class="px-4 py-1.5 rounded-md text-lg text-gray-100 bg-blue-600 hover:bg-blue-500 hover:text-white"
    >
      Add to cart
    </button>
  </div>
</div>
