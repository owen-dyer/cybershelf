<%- include ('../components/header') %>
<%- include ('../components/menu') %>

<div class="container mx-auto my-8">
  <h1 class="text-3xl font-bold mb-4">UI Service Index Page</h1>

  <!-- We are going to inject the data into the div -->
  <div id="account" class="bg-white p-4 rounded shadow-md">
    <!-- Content will be injected here -->
  </div>

  <script>
    // This is an example of how to inject the content returned from a request into the page (without refreshing)
    $.ajax({
      url: "/account/settings",
      type: "GET",
      dataType: "html",
      success: function (data) {
        $("#account").html(data);
      },
      error: function (error) {
        $("#account").html(error);
      },
    });
  </script>
</div>

